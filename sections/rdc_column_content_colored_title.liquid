<div class="rdc-section">
  <div class="rdc-section__content">
    <div class="rdc-section__text">
      {% if section.settings.icon != blank %}
        <img src="{{ section.settings.icon | img_url: '100x' }}" alt="Icon" class="rdc-section__icon" loading="lazy">
      {% endif %}
      <h2 style="text-transform: lowercase;">
        {{ section.settings.title_h2 }}
      </h2>
      <h1>
        {% if section.settings.title_h1_part1 != blank %}
          {{ section.settings.title_h1_part1 }}
        {% endif %}
        <span class="rdc-section__title-colored">{{ section.settings.title_h1_colored }}</span>
      </h1>
      <p class="rdc-section__description">{{ section.settings.description_text }}</p>
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="rdc-section__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
    
    <div class="rdc-section__image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.title_h2 }} {{ section.settings.title_h1_colored }}" loading="lazy">
      {% else %}
        <img src="https://via.placeholder.com/600x400" alt="Placeholder">
      {% endif %}
    </div>
  </div>
</div>

<style>
  h2::first-letter {
    text-transform: uppercase;
  }
  
  .rdc-section {
    width: 100%;
    padding: 40px 20px;
  }
  
  .rdc-section__content {
    display: flex;
    gap: 40px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .rdc-section__text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
  }
  
  .rdc-section__icon {
    width: 60px;
    height: 60px;
    margin-bottom: 15px;
    object-fit: contain;
  }
  
  .rdc-section__text h2 {
    margin: 0 0 10px 0;
  }
  
  .rdc-section__text h1 {
    margin: 0 0 0 0;
  }
  
  .rdc-section__description {
    margin: 0;
    line-height: 1.6;
    color: #333;
  }
  
  .rdc-section__image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .rdc-section__image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    object-fit: cover;
  }
  
  .rdc-section__title-colored {
    color: {% if section.settings.custom_color != blank %}{{ section.settings.custom_color }}{% else %}{{ settings.accent_color }}{% endif %};
  }
  
  .rdc-section__button {
    display: inline-block;
    margin-top: 20px;
    padding: 16px 40px;
    color: #ffffff;
    text-align: center;
    background: linear-gradient(135deg, #5a2237 0%, #722c4d 100%);
    text-decoration: none;
    letter-spacing: 0.05rem;
    font-size: 2rem;
    border-radius: 50px;
    border: none;
    box-shadow: 0 4px 15px rgba(95, 30, 30, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    font-family: var(--font-heading-family);
    width : 70%;
  }
  
  .rdc-section__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #6b253fff 0%, #802f55ff 100%);
    transition: left 0.3s ease;
    z-index: -1;
  }
  
  .rdc-section__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(30, 58, 95, 0.4);
  }
  
  .rdc-section__button:hover::before {
    left: 0;
  }
  
  .rdc-section__button:active {
    transform: translateY(0);
    box-shadow: 0 3px 10px rgba(30, 58, 95, 0.3);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .rdc-section__content {
      flex-direction: column;
      gap: 30px;
    }
    
    .rdc-section__text,
    .rdc-section__image {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Fragment d'Histoire",
  "tag": "section",
  "class": "rdc-fragment-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icône (optionnel)",
      "info": "Affichée au-dessus du titre. Taille recommandée : 100x100px"
    },
    {
      "type": "text",
      "id": "title_h2",
      "label": "Titre H2 (petit)",
      "default": "Portez un authentique"
    },
    {
      "type": "text",
      "id": "title_h1_part1",
      "label": "Titre H1 - Partie 1 (optionnel)"
    },
    {
      "type": "text",
      "id": "title_h1_colored",
      "label": "Titre H1 - Partie colorée",
      "default": "fragment d'Histoire"
    },
    {
      "type": "header",
      "content": "Couleurs"
    },
    {
      "type": "paragraph",
      "content": "Par défaut, la couleur Accent du thème est utilisée. Vous pouvez la remplacer par une couleur personnalisée ci-dessous."
    },
    {
      "type": "color",
      "id": "custom_color",
      "label": "Couleur personnalisée (optionnel)",
      "info": "Laissez vide pour utiliser la couleur Accent du thème"
    },
    {
      "type": "richtext",
      "id": "description_text",
      "label": "Texte de description"   
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton (optionnel)",
      "default": "Explorer les fragments"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "Fragment d'Histoire"
    }
  ]
}
{% endschema %}