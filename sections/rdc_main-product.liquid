{%- liquid
  assign first_3d_model = product.media | where: 'media_type', 'model' | first
-%}

{% style %}
  /* Mobile: full-width */
  .container
  {
    max-width: 100%;
    padding-inline: 25px;
  }

  .container-without-padding
  {
    padding-inline: 0;
  }

  /* Desktop: constrained width with padding */
  @media screen and (min-width: 768px) {
    .container {
      max-width: 1500px;
      padding-inline: 5rem;
    }
  }

  .product__info-container
  {
    padding-right: 90px
  }

      @media screen and (min-width: 768px) {
        .product {
          display: grid;
          grid-template-columns: 50% 1fr; /* 60% pour les médias, 1fr pour les informations */
          gap: 0rem;
          align-items: start;
        }

        .product__media-wrapper {
          width: 100%;
          position: sticky;
          top: 2rem;
          align-self: start;
        }

        .product__info-wrapper {
          width: 100%;
        }
      }

      @media screen and (max-width: 767px) {
        .product {
          flex-direction: column;
        }


        .product__media-wrapper {
          width: 100%;
        }

        .product__info-wrapper {
          padding-inline: 25px;
          padding-top: 0;
        }

        .section-padding-galery-mobile
        {
          padding-top: 0;
        }
      }

      /* Dual Gallery System - Responsive Toggle */
      /* TEMPORARY: Desktop gallery disabled for testing mobile gallery on desktop */
      /* Desktop: Show custom gallery, hide default */
      @media screen and (min-width: 768px) {
        .rdc-gallery-desktop {
          display: none; /* DISABLED FOR TESTING */
        }
        .rdc-gallery-mobile {
          display: block; /* ENABLED FOR TESTING */
        }
      }

      /* Mobile: Hide custom gallery, show default */
      @media screen and (max-width: 767px) {
        .rdc-gallery-desktop {
          display: none;
        }
        .rdc-gallery-mobile {
          display: block;
        }
      }

      /* Style de l'info wrapper custom */

      .product__3price {
        font-family: var(--font-accent-family);
        font-weight: var(--font-accent-weight);
        font-style: var(--font-accent-style);
      }

      .product__description.rte {
        color: #534f4f;
        font-size: 1.8rem;
        font-style: italic;
        margin-bottom: 25px !important;
        margin-top: 0 !important;
      }

      /* Mise en page centrée pour les sélecteurs de variantes */

    .product-form__input
    {
      margin-bottom: 0 !important;
    }

      #variant-selects-{{ section.id }} {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #variant-selects-{{ section.id }} > fieldset,
      #variant-selects-{{ section.id }} > div {
        width: 100%;
        padding: 0;
        padding-bottom: 15px;
        border-radius: 6px;
        position: relative;
      }

      #variant-selects-{{ section.id }} .form__label {
        text-align: left;
        justify-content: flex-start;
        text-transform: uppercase;
        font-weight: 400;
        letter-spacing: 0.1em;
        margin-bottom: 0;
        padding: 10px 10px 10px 0;
        border-radius: 6px;
        font-family: var(--font-accent-family);
      }

      #variant-selects-{{ section.id }} .form__label .form__label-value,
      #variant-selects-{{ section.id }} .form__label span[data-selected-swatch-value] {
        font-weight: 700;
      }

      /* Styles pour les boutons de variantes (taille, impression) */
      #variant-selects-{{ section.id }} .product-form__input--pill label {
        transition: all 0.3s ease;
        opacity: 0.8;
        border: 2px solid #cac6c6ff;
      }

      #variant-selects-{{ section.id }} .product-form__input--pill label:hover {
        opacity: 0.8;
      }

      #variant-selects-{{ section.id }} .product-form__input--pill input:checked + label {
        opacity: 1;
        font-weight: 700;
        border: 2px solid #cac6c6ff;
        background: #FDFBF8;
      }

      .swatch-image:before, .swatch-block:before {
        box-shadow: none;
      }

      /* Styles personnalisés pour les swatches de couleur */

      .swatch-block
      {
        border-radius: 20px;
        box-shadow: inset 0 0 0 2px #d4ccccff;
        border: none !important;
      }

      .swatch-block:before
      {
        box-shadow: inset 0 0 0 4px #9c9090ff;
        border: none !important;
      }

      .swatch-color
      {
        height: 4rem !important;
        width: 4rem !important;
        border: 2px solid #cac6c6ff;
      }

      .swatch-color:before
      {
        box-shadow: 0 0 0 2px #96928aff;
      }

      #variant-selects-{{ section.id }} .swatch-input__input + .swatch-input__label {
        --swatch-input--size: 4.5rem;
        transition: all 0.3s ease;
      }

      #variant-selects-{{ section.id }} .swatch {
        box-shadow: none;
        border-radius: 10%;
      }

      #variant-selects-{{ section.id }} .swatch-input__input:hover + .swatch-input__label .swatch {
        border-color: #000;
        transform: scale(1.05);
      }

      #variant-selects-{{ section.id }} .swatch-input__input:checked + .swatch-input__label .swatch {
        border: none !important;
      }

      #variant-selects-{{ section.id }} .swatch-input__input:not(:checked) + .swatch-input__label {
        opacity: 0.6;
      }

      #variant-selects-{{ section.id }} .swatch-input__input:not(:checked) + .swatch-input__label:hover {
        opacity: 0.8;
      }

      #variant-selects-{{ section.id }} .swatch-input__input:checked + .swatch-input__label {
        opacity: 1;
      }

      /* Boutons d'achats */

      .product-form__submit
      {
        background: #413d3dff !important;
        color: white !important;
        border: none;
        padding: 3rem 2rem;
        font-family: "GTStandard-M" !important;
        border-radius: 6px;
      }

      .shopify-payment-button__more-options {
        font-size: 0 !important;
      }

      .shopify-payment-button__more-options::after {
        content: "15 jours de retour ou échange garanti";
        font-size: 1.4rem;
        color: #534f4f;
        font-family: var(--font-body-family);
      }

      /* Social proof sous les boutons de paiement */
      .product__social-proof {
        margin-top: -25px !important;
        text-align: center;
        font-size: 1.4rem;
        color: #534f4f;
        font-family: var(--font-body-family);
        line-height: 1.6;
      }

      /* Aussi disponible section */
      .rdc-aussi-disponible {
        margin-top: 3rem !important;
        text-align: center;
      }

      .rdc-aussi-disponible__heading {
        font-size: 1.4rem;
        font-weight: 400;
        color: #534f4f;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 2rem;
      }

      .rdc-aussi-disponible__grid {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
      }

      .rdc-aussi-disponible__item {
        flex: 0 0 auto;
      }

      .rdc-aussi-disponible__link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: #534f4f;
        transition: all 0.3s ease;
        padding: 1.5rem;
        background: #eeede6;
        border-radius: 6px;
        min-width: 120px;
      }

      .rdc-aussi-disponible__link:hover {
        background: rgba(238, 237, 230, 0.3);
        transform: scale(1.1);
      }

      .rdc-product-type-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .rdc-product-type-icon img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        opacity: 0.8;
        transition: opacity 0.3s ease;
      }

      .rdc-aussi-disponible__link:hover .rdc-product-type-icon img {
        opacity: 1;
      }

      .rdc-aussi-disponible__label {
        font-size: 1.2rem;
        font-weight: 400;
        text-align: center;
      }

      .rdc-aussi-disponible__empty {
        color: #96928a;
        font-style: italic;
        font-size: 1.2rem;
      }

      @media screen and (max-width: 749px) {
        .rdc-aussi-disponible__grid {
          gap: 1rem;
        }

        .rdc-product-type-icon {
          width: 50px;
          height: 50px;
        }

        .rdc-aussi-disponible__link {
          min-width: 100px;
          padding: 1rem;
        }
      }

      /* Banner pour afficher la collection Reliques */
      .product__relique-banner {
        font-size: 2.8rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-family: var(--font-heading-family);
        color: #d1ceceff;
        padding: 0 5rem;
        max-width: 1500px;
        margin: auto;
        display: flex;
        gap: 2rem;
      }

       @media screen and (max-width: 749px) {
      .product__relique-banner {
      display: none;
    }
  }

      /* Résumé sous le titre */
      .product__resume {
        font-size: 1.6rem;
        color: #534f4f;
        margin-top: 0 !important;
        margin-bottom: 2rem !important;
        font-weight: 400;
        font-family: var(--font-accent-family);
        line-height: 1.5;
      }

      /* Éléments list après la description */
      .product__elements {
        margin-top: 2rem;
        margin-bottom: 2rem;
      }

      .product__elements-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
      }

      @media screen and (max-width: 749px) {
        @keyframes scroll-elements {
          0% {
            transform: translateX(0);
          }
          50% {
            transform: translateX(var(--scroll-distance, -100vw));
          }
          100% {
            transform: translateX(0);
          }
        }

        .product__elements-list {
          display: flex;
          flex-wrap: nowrap;
          overflow-x: hidden;
          scrollbar-width: none;
          gap: 0.75rem;
          padding-bottom: 0.5rem;
          margin-right: -25px;
          margin-left: -25px;
          padding-inline: 25px;
          position: relative;
          --scroll-distance: -100vw;
        }

        .product__elements-list::-webkit-scrollbar {
          display: none;
        }

        .product__elements-list > * {
          animation: scroll-elements 30s infinite;
        }

        .product__elements-item {
          flex-shrink: 0;
          white-space: nowrap;
        }

        /* Pause animation on hover/touch */
        .product__elements-list:hover > *,
        .product__elements-list:active > * {
          animation-play-state: paused;
        }
      }

      .product__elements-item {
        background: #EEEDE6;
        color: #534f4f;
        border-radius: 20px;
        padding: 2px;
        padding-left: 15px;
        padding-right: 20px;
        font-size: 1.4rem;
        font-weight: 400;
        font-family: var(--font-accent-family);
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 1.4rem;
        transition: all 0.3s ease;
      }


      .product__elements-item:hover {
        transform: scale(1.05);
        cursor: pointer;
      }

      .product__elements-icon {
        width: 34px;
        height: 34px;
        flex-shrink: 0;
        display: block;
        object-fit: contain;
        border-radius: 50%;
        margin-left: -15px;
      }

      /* Fallback checkmark for items without custom icon */
      .product__elements-item[data-icon="default"]::before {
        content: "✓";
        font-weight: 700;
        color: #534f4f;
        margin-right: -0.3rem;
      }
{% endstyle %}

<section
  id="MainProduct-{{ section.id }}"
  class="section-main-product section-padding section-bg section-padding-galery-mobile"
  {% render 'section-properties' %}
  data-section="{{ section.id }}"
>
  {%- comment -%} Afficher le nom de l'illustration (métaobjet Reliques) {%- endcomment -%}
  {%- if product.metafields.custom.illustration != blank -%}
    {%- assign relique = product.metafields.custom.illustration.value -%}
    <div class="product__relique-banner">
      Collection
      {%- if relique.tags != blank -%}
        {% for tag in relique.tags.value %}
          {{ tag -}}
          {%- unless forloop.last %}, {% endunless %}
        {% endfor %}
      {%- endif -%}
    </div>
  {%- endif -%}

  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'rdc_product-info.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {% unless product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- if settings.enable_css_review -%}
    {{ 'style-judgeme.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
  {%- if settings.enable_css_subscriptions -%}
    {{ 'style-subscriptions.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
  {% assign upsell_add_on = section.blocks | where: 'type', 'upsell_add_on' %}
  {% if upsell_add_on %}
    {{ 'upsell-add-on.css' | asset_url | stylesheet_tag }}
  {% endif %}

  <script>
    try {
      const items = JSON.parse(localStorage.getItem('recently-viewed') || '[]');
      if (!items.includes({{ product.id }})) {
        items.unshift({{ product.id }});
      }
      localStorage.setItem('recently-viewed', JSON.stringify(items.slice(0, 20)));
    } catch (e) {
      console.log(e);
    }

    // Smooth fade-in for product info wrapper
    setTimeout(function() {
      const infoWrapper = document.querySelector('.product__info-wrapper');
      if (infoWrapper) {
        infoWrapper.classList.add('is-ready');
      }
    }, 500);
  </script>
  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

  {%- if product.quantity_price_breaks_configured? -%}
    <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- if first_3d_model -%}
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
  <div class="container container-without-padding ">
    <div
      class="product  product--{{ section.settings.media_position }} product--{{ section.settings.gallery_layout }} product--mobile-{{ section.settings.mobile_thumbnails }} flex lg:flex-row flex-col "
      style="--media-width:{{ section.settings.media_width }}%;"
    >
      <div class="product__media-wrapper">
        {%- if product.media.size > 0 -%}
          {%- comment -%} Desktop: Custom gallery with grid layout {%- endcomment -%}
          <div class="rdc-gallery-desktop">
            {% render 'rdc_product-gallery-classic', variant_images: variant_images %}
          </div>

          {%- comment -%} Mobile: Custom mobile gallery with carousel {%- endcomment -%}
          <div class="rdc-gallery-mobile">
            {% render 'rdc_product-gallery-mobile', variant_images: variant_images %}
          </div>
        {%- else -%}
          {% render 'placeholder-image',
            product_placeholder: 'product-1',
            image_aspect_ratio: section.settings.media_aspect_ratio
          %}
        {%- endif -%}
      </div>

      <div class="product__info-wrapper lg:pt-0 pt-8">
        <product-info
          id="ProductInfo-{{ section.id }}"
          data-section="{{ section.id }}"
          data-url="{{ product.url }}"
          class="product__info-container{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %} {% if section.settings.enable_max_width_content %} lg:max-w-[52rem] mx-auto {% endif %}"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'separator' -%}
                <hr
                  class="product__divider {% if block.settings.show_border  %} border-t {% else %} border-t-0 {% endif %}"
                  style="--divider-space:{{ block.settings.divider_space }}rem;"
                  {{ block.shopify_attributes }}
                >
              {%- when 'text' -%}
                <p
                  class="product__text inline-richtext{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subheading' %} sub-heading{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.text -}}
                </p>
              {%- when 'link' -%}
                <div class="product__link" {{ block.shopify_attributes }}>
                  {%- render 'button',
                    button_style: block.settings.style,
                    button_text: block.settings.text,
                    button_url: block.settings.url,
                    link_target: block.settings.open_new_tab
                  -%}
                </div>
              {%- when 'title' -%}
                <h1 class="product__title {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ product.title | escape }}
                </h1>

                {%- comment -%} Display force_de_vente from Produits metaobject if product.type matches {%- endcomment -%}
                {%- if product.type != blank -%}
                  {%- assign product_type_lower = product.type | downcase | strip -%}
                  {%- assign force_vente_text = '' -%}

                  {%- for produit in shop.metaobjects.produits.values -%}
                    {%- assign produit_nom = produit.nom.value | downcase | strip -%}
                    {%- if produit_nom == product_type_lower -%}
                      {%- if produit.force_de_vente != blank -%}
                        {%- assign force_vente_text = produit.force_de_vente.value -%}
                        {%- break -%}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}

                  {%- if force_vente_text != blank -%}
                    <p class="product__resume">{{ force_vente_text }}</p>
                  {%- endif -%}
                {%- endif -%}
              {%- when 'price' -%}
                <div class="product__price" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: block.settings.show_sale_badge,
                    sale_badge_type: block.settings.sale_badge_type,
                    price_class: 'price--large flex items-center gap-4'
                  -%}
                  <div
                    class="product__3price"
                    style="position: relative; width: auto; display: inline-block; padding-right: 60px;"
                  >
                    <img
                      src="{{ 'rdc_icon_klarna.png' | asset_url }}"
                      alt=""
                      style="position: absolute; right: 0; height: 20px; top: 3px;"
                    >
                    ou 3 paiements de
                    <b>{{ product.selected_or_first_available_variant.price | divided_by: 3 | money }} TTC</b>
                  </div>
                </div>
                {%- if product.quantity_price_breaks_configured? -%}
                  <div class="volume-pricing-note" id="Volume-Note-{{ section.id }}">
                    <span>{{ 'products.product.volume_pricing.note' | t }}</span>
                  </div>
                {%- endif -%}
                {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                  <div class="product__tax caption rte">
                    {%- if cart.taxes_included -%}
                      {{ 'products.product.include_taxes' | t }}
                    {%- endif -%}
                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </div>
                {%- endif -%}
                <div {{ block.shopify_attributes }}>
                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                  {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {{ form | payment_terms }}
                  {%- endform -%}
                </div>
              {%- when 'inventory' -%}
                {% render 'inventory-status', product: product, section: section, block: block %}
              {%- when 'description' -%}
                {%- comment -%} Afficher la description de l'illustration depuis le métaobjet Reliques {%- endcomment -%}
                {%- assign description_content = '' -%}
                {%- if product.metafields.custom.illustration != blank -%}
                  {%- assign relique = product.metafields.custom.illustration.value -%}
                  {%- if relique.citation != blank -%}
                    {%- assign description_content = relique.citation | metafield_text -%}
                  {%- endif -%}
                {%- endif -%}

                {%- comment -%} Fallback sur la description du produit si pas d'illustration {%- endcomment -%}
                {%- if description_content == blank -%}
                  {%- assign description_content = product.description -%}
                {%- endif -%}

                {%- if description_content != blank -%}
                  {%- if block.settings.show_more_toggle -%}
                    <show-more-toggle
                      class="show-more-toggle product__description"
                      style="--max-height:{{ block.settings.max_height }}rem;"
                    >
                      <div data-show-more-content class="content-truncated">
                        <div class="rte quick-add-hidden" {{ block.shopify_attributes }}>
                          {{ description_content }}
                        </div>
                      </div>
                      <button type="button" class="link mt-4" aria-label="{{ 'accessibility.show_more' | t }}">
                        <span class="label-show-more">{{ 'accessibility.show_more' | t }}</span>
                        <span class="label-show-less hidden">{{ 'accessibility.show_less' | t }}</span>
                      </button>
                    </show-more-toggle>
                  {%- else -%}
                    <div class="product__description rte quick-add-hidden" {{ block.shopify_attributes }}>
                      {{ description_content }}
                    </div>
                  {%- endif -%}
                {%- endif -%}

                {%- comment -%} Display Éléments list from Produits metaobject if product.type matches {%- endcomment -%}
                {%- if product.type != blank -%}
                  {%- assign product_type_lower = product.type | downcase | strip -%}
                  {%- assign elements_list = '' -%}

                  {%- for produit in shop.metaobjects.produits.values -%}
                    {%- assign produit_nom = produit.nom.value | downcase | strip -%}
                    {%- if produit_nom == product_type_lower -%}
                      {%- if produit.elements != blank -%}
                        {%- assign elements_list = produit.elements.value -%}
                        {%- break -%}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}

                  {%- if elements_list != blank -%}
                    <div class="product__elements">
                      <ul class="product__elements-list">
                        {%- for element in elements_list -%}
                          {%- assign icon_name = '' -%}
                          {%- capture icon_name -%}{% render 'rdc_element-icon-mapping', element_text: element %}{%- endcapture -%}
                          {%- assign icon_name = icon_name | strip -%}
                          {%- capture element_content -%}{% render 'rdc_element-content-mapping', element_text: element %}{%- endcapture -%}
                          <li
