      // Calculate scroll distance for elements list animation
      (function () {
        function updateElementsScrollDistance() {
          if (window.innerWidth > 749) return; // Only on mobile

          const elementsList = document.querySelector('.product__elements-list');
          if (!elementsList) return;

          // Get the total scroll width of the content
          const scrollWidth = elementsList.scrollWidth;
          // Get the visible width
          const clientWidth = elementsList.clientWidth;
          // Calculate the distance to scroll (negative value)
          const scrollDistance = -(scrollWidth - clientWidth);

          // Set CSS variable
          elementsList.style.setProperty('--scroll-distance', `${scrollDistance}px`);
        }

        // Update on load
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', updateElementsScrollDistance);
        } else {
          updateElementsScrollDistance();
        }

        // Update on resize
        let resizeTimer;
        window.addEventListener('resize', function () {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(updateElementsScrollDistance, 250);
        });

        // Update after images load (in case icons affect width)
        window.addEventListener('load', updateElementsScrollDistance);
      })();
