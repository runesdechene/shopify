{% comment %}
  RDC Custom Product Carousel
  Carousel horizontal personnalisé pour afficher des produits
{% endcomment %}

{%- liquid
  assign products_to_display = section.settings.collection.products | default: collections.all.products
  assign products_count = products_to_display.size
-%}

<style>
  .rdc-carousel {
    position: relative;
    width: 100%;
    padding: 2rem 0;
    overflow: hidden;
  }

  .rdc-carousel__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .rdc-carousel__title {
    font-size: 2.5rem;
    font-family: var(--font-heading-family);
    color: #333;
    margin-bottom: 0.5rem;
  }

  .rdc-carousel__subtitle {
    font-size: 1rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .rdc-carousel__wrapper {
    position: relative;
    width: 100%;
    padding: 0;
  }

  .rdc-carousel__container {
    overflow: visible;
    position: relative;
    width: 100%;
  }

  .rdc-carousel__track {
    display: flex;
    gap: 1.5rem;
    transition: transform 0.4s ease;
  }

  .rdc-carousel__item {
    flex-shrink: 0;
    opacity: 0.5;
    transition: all 0.4s ease;
  }

  .rdc-carousel__item--empty {
    opacity: 0;
    pointer-events: none;
  }

  .rdc-carousel__item.is-active {
    opacity: 1;
    z-index: 2;
  }

  .rdc-carousel__item.is-prev,
  .rdc-carousel__item.is-next {
    opacity: 0.9;
    z-index: 1;
  }

  .rdc-carousel__product-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .rdc-carousel__product-card:hover {
    transform: translateY(-5px);
  }

  .rdc-carousel__product-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #EEEDE6;
  }

  .rdc-carousel__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .rdc-carousel__product-card:hover .rdc-carousel__product-image img {
    transform: scale(1.05);
  }

  .rdc-carousel__product-info {
    padding: 1rem;
  }

  .rdc-carousel__product-title {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .rdc-carousel__product-price {
    font-size: 1.1rem;
    font-weight: bold;
    color: #000;
  }

  .rdc-carousel__nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid #ddd;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: all 0.2s ease;
    margin: 0 2rem;
  }

  .rdc-carousel__nav-button:hover {
    background: #fff;
  }

  .rdc-carousel__nav-button.disabled {
    opacity: 0.3;
    pointer-events: none;
  }

  .rdc-carousel__nav-button--prev {
    left: 0;
  }

  .rdc-carousel__nav-button--next {
    right: 0;
  }

  .rdc-carousel__nav-button svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 1023px) {
    .rdc-carousel__item {
      width: 350px;
      max-width: 40vw;
    }
  }

  @media (max-width: 767px) {
    .rdc-carousel__item {
      width: 280px;
      max-width: 70vw;
    }

    .rdc-carousel__nav-button {
      width: 40px;
      height: 40px;
      margin: 0 1rem;
    }

    .rdc-carousel__nav-button svg {
      width: 20px;
      height: 20px;
    }
  }
</style>

<section class="rdc-carousel" id="RdcCarousel-{{ section.id }}">
  <div class="rdc-carousel__wrapper">
    {%- if media_count > 4 -%}
      <button class="rdc-carousel__nav-button rdc-carousel__nav-button--prev disabled" type="button" aria-label="Précédent">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
    {%- endif -%}

    <div class="rdc-carousel__container">
      <div class="rdc-carousel__track" id="RdcCarouselTrack-{{ section.id }}">
        {%- for media in product.media -%}
          {%- if media.media_type == 'image' -%}
            <div class="rdc-carousel__item" data-index="{{ forloop.index0 }}" data-media-id="{{ media.id }}" data-aspect-ratio="{{ media.aspect_ratio }}">
              <div class="rdc-carousel__product-card">
                <div class="rdc-carousel__product-image">
                  {{
                    media
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      alt: media.alt | escape
                  }}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    {%- if media_count > 4 -%}
      <button class="rdc-carousel__nav-button rdc-carousel__nav-button--next" type="button" aria-label="Suivant">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    {%- endif -%}
  </div>
</section>

<script>
  (function() {
    function initCarousel() {
      const carousel = document.getElementById('RdcCarousel-{{ section.id }}');
      if (!carousel) {
        console.error('Carousel not found');
        return;
      }

      const track = carousel.querySelector('.rdc-carousel__track');
      const items = Array.from(carousel.querySelectorAll('.rdc-carousel__item'));
      const prevButton = carousel.querySelector('.rdc-carousel__nav-button--prev');
      const nextButton = carousel.querySelector('.rdc-carousel__nav-button--next');

      if (!track || items.length === 0) return;

      // Réorganiser les items pour avoir la première image au centre
      // On veut avoir des images avant et après la première image
      const originalItems = Array.from(items);
      const reorderedItems = [];
      
      // Si on a assez d'images, on réorganise pour avoir la première au centre
      if (originalItems.length >= 3) {
        // Mettre les dernières images au début pour avoir des images à gauche
        const itemsToMoveToStart = Math.min(3, originalItems.length - 1);
        for (let i = originalItems.length - itemsToMoveToStart; i < originalItems.length; i++) {
          reorderedItems.push(originalItems[i]);
        }
        // Puis ajouter toutes les images depuis le début
        for (let i = 0; i < originalItems.length - itemsToMoveToStart; i++) {
          reorderedItems.push(originalItems[i]);
        }
      } else {
        reorderedItems.push(...originalItems);
      }
      
      // Créer deux items vides pour pousser les images au centre
      const emptyItem1 = document.createElement('div');
      emptyItem1.className = 'rdc-carousel__item rdc-carousel__item--empty';
      emptyItem1.style.pointerEvents = 'none';
      
      const emptyItem2 = document.createElement('div');
      emptyItem2.className = 'rdc-carousel__item rdc-carousel__item--empty';
      emptyItem2.style.pointerEvents = 'none';
      
      // Vider et reconstruire le track avec les items vides au début
      track.innerHTML = '';
      track.appendChild(emptyItem1);
      track.appendChild(emptyItem2);
      reorderedItems.forEach(item => track.appendChild(item));
      
      // Mettre à jour la référence items
      const updatedItems = Array.from(track.querySelectorAll('.rdc-carousel__item'));
      
      // L'index de départ est maintenant décalé de 2 à cause des items vides
      let currentIndex = originalItems.length >= 3 ? Math.min(3, originalItems.length - 1) + 2 : 2;
      const originalFirstImageId = originalItems[0]?.dataset.mediaId;

      // Calculer les largeurs des images basées sur leur ratio pour avoir 5 images visibles
      function calculateItemWidths() {
        const containerWidth = carousel.offsetWidth;
        const gap = 24; // 1.5rem
        const totalGaps = 4 * gap; // 4 gaps entre 5 images
        const availableWidth = containerWidth - totalGaps;
        
        // Récupérer les ratios de toutes les images (sans les items vides)
        const realItems = updatedItems.filter(item => !item.classList.contains('rdc-carousel__item--empty'));
        const aspectRatios = realItems.map(item => {
          const ratio = parseFloat(item.dataset.aspectRatio) || 0.75; // 3/4 par défaut
          return ratio;
        });
        
        // Calculer la hauteur commune pour toutes les images
        // On veut que 5 images remplissent la largeur disponible
        // Largeur totale = somme(hauteur × ratio) pour 5 images
        // On prend les 5 premières images pour le calcul initial
        const first5Ratios = aspectRatios.slice(0, 5);
        const sumRatios = first5Ratios.reduce((sum, ratio) => sum + ratio, 0);
        const commonHeight = availableWidth / sumRatios;
        
        // Appliquer les largeurs calculées à chaque item réel
        realItems.forEach((item, index) => {
          const ratio = aspectRatios[index];
          const width = commonHeight * ratio;
          item.style.width = `${width}px`;
          
          // Appliquer la hauteur à l'image
          const imageContainer = item.querySelector('.rdc-carousel__product-image');
          if (imageContainer) {
            imageContainer.style.height = `${commonHeight}px`;
          }
        });
        
        // Calculer dynamiquement la largeur des items vides pour compenser
        // On veut que l'image active soit toujours au centre
        // Largeur des vides = (largeur écran / 2) - (largeur image active / 2)
        const emptyItems = updatedItems.filter(item => item.classList.contains('rdc-carousel__item--empty'));
        
        if (emptyItems.length > 0) {
          // Trouver l'image active (en soustrayant les 2 items vides de currentIndex)
          const activeRealIndex = currentIndex - 2;
          let activeRatio = 0.75; // défaut
          
          if (activeRealIndex >= 0 && activeRealIndex < aspectRatios.length) {
            activeRatio = aspectRatios[activeRealIndex];
          }
          
          const activeWidth = commonHeight * activeRatio;
          const centerOffset = (containerWidth / 2) - (activeWidth / 2);
          
          // Calculer la largeur totale nécessaire pour les items vides
          // Pour centrer l'image active, on a besoin que les items vides + gaps compensent
          const emptyWidth = Math.max(0, centerOffset - gap);
          const widthPerEmpty = emptyWidth / emptyItems.length;
          
          emptyItems.forEach(item => {
            item.style.width = `${widthPerEmpty}px`;
          });
        }
      }
      
      // Calculer les largeurs après la réorganisation
      calculateItemWidths();

      function updateItemClasses() {
        updatedItems.forEach((item, index) => {
          item.classList.remove('is-active', 'is-prev', 'is-next');
          
          if (index === currentIndex) {
            item.classList.add('is-active');
          } else if (index === currentIndex - 1) {
            item.classList.add('is-prev');
          } else if (index === currentIndex + 1) {
            item.classList.add('is-next');
          }
        });
      }

      function updateCarouselPosition() {
        // Recalculer les largeurs des items vides en fonction de l'image active
        calculateItemWidths();
        
        const itemWidth = updatedItems[0]?.offsetWidth || 0;
        const containerWidth = carousel.offsetWidth;
        
        // Lire le gap réel depuis le CSS
        const trackStyles = window.getComputedStyle(track);
        const gap = parseFloat(trackStyles.gap) || 24;
        
        // Calculer l'offset pour centrer l'image active
        // L'image active doit être au centre de l'écran
        const centerOffset = (containerWidth / 2) - (itemWidth / 2);
        
        // Position de l'item dans le track = somme des largeurs et gaps précédents
        let itemPosition = 0;
        for (let i = 0; i < currentIndex; i++) {
          itemPosition += (updatedItems[i]?.offsetWidth || itemWidth) + gap;
        }
        
        const offset = itemPosition - centerOffset;
        track.style.transform = `translateX(-${offset}px)`;

        updateItemClasses();

        if (prevButton) {
          prevButton.classList.toggle('disabled', currentIndex === 0);
        }
        if (nextButton) {
          const maxScroll = Math.max(0, updatedItems.length - 1);
          nextButton.classList.toggle('disabled', currentIndex >= maxScroll);
        }
      }

      if (prevButton) {
        prevButton.addEventListener('click', function(e) {
          e.preventDefault();
          if (currentIndex > 0) {
            currentIndex--;
            updateCarouselPosition();
          }
        });
      }

      if (nextButton) {
        nextButton.addEventListener('click', function(e) {
          e.preventDefault();
          const maxScroll = Math.max(0, items.length - 1);
          if (currentIndex < maxScroll) {
            currentIndex++;
            updateCarouselPosition();
          }
        });
      }

      // Ajouter des event listeners sur chaque image pour la rendre active au clic
      updatedItems.forEach((item, index) => {
        item.addEventListener('click', function(e) {
          e.preventDefault();
          if (index !== currentIndex) {
            currentIndex = index;
            updateCarouselPosition();
          }
        });
        
        // Ajouter un style de curseur pour indiquer que c'est cliquable
        item.style.cursor = 'pointer';
      });

      window.addEventListener('resize', () => {
        calculateItemWidths();
        updateCarouselPosition();
      });

      updateCarouselPosition();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCarousel);
    } else {
      initCarousel();
    }
  })();
</script>

