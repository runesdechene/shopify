{% liquid
  if section.settings.collection_list != blank
    assign section_collections = section.settings.collection_list
    assign max_items = section.settings.collection_list.count
  elsif section.settings.layout_type == 'carousel'
    assign max_items = section.settings.columns | plus: 2
  elsif section.settings.layout_type == 'grid'
    assign max_items = section.settings.columns
  endif

  # Shuffle collections if enabled
  if section.settings.shuffle_collections and section_collections != blank
    assign shuffle_seed = 'now' | date: '%S' | times: 1
    assign collections_array = section_collections | sort: 'id'

    # Simple shuffle using modulo based on current second
    assign shuffled_collections = ''
    assign collections_count = collections_array.size

    for i in (0..collections_count)
      assign offset = shuffle_seed | plus: i | modulo: collections_count
      assign shuffled_collections = shuffled_collections | append: offset | append: ','
    endfor
  endif

  # Handle pinned collection
  assign pinned_collection = section.settings.pinned_collection
  assign pinned_first_product = section.settings.pinned_first_product
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
  data-testid="illustration-list"
>
  <div class="section-resource-list__content">
    {%- content_for 'blocks' -%}
  </div>

  {% if section_collections == null %}
    {% for i in (1..max_items) %}
      {% assign section_collections = section_collections | append: ', ' %}
    {% endfor %}
    {% assign section_collections = section_collections | split: ',' %}
  {% endif %}

  {% capture list_items %}
    {% comment %} First: render pinned collection if set {% endcomment %}
    {% if pinned_collection != blank %}
      {% assign is_pinned_in_list = false %}
      {% for col in section_collections %}
        {% if col.id == pinned_collection.id %}
          {% assign is_pinned_in_list = true %}
          {% break %}
        {% endif %}
      {% endfor %}
      
      {% if is_pinned_in_list %}
        <div class="resource-list__item">
          {% if pinned_first_product %}
            {% render 'illustration-card',
              collection: pinned_collection,
              random_product: false,
              show_collection_title: section.settings.show_collection_title,
              title_size: section.settings.title_size,
              show_product_title: section.settings.show_product_title,
              show_price: section.settings.show_price,
              show_summary: section.settings.show_summary,
              image_height: section.settings.image_height,
              section: section
            %}
          {% else %}
            {% render 'illustration-card',
              collection: pinned_collection,
              random_product: section.settings.random_product,
              show_collection_title: section.settings.show_collection_title,
              title_size: section.settings.title_size,
              show_product_title: section.settings.show_product_title,
              show_price: section.settings.show_price,
              show_summary: section.settings.show_summary,
              image_height: section.settings.image_height,
              section: section
            %}
          {% endif %}
        </div>
        <!--@list/split-->
      {% endif %}
    {% endif %}
    
    {% comment %} Render remaining collections {% endcomment %}
    {% assign rendered_count = 0 %}
    {% if pinned_collection != blank and is_pinned_in_list %}
      {% assign rendered_count = 1 %}
    {% endif %}
    
    {% assign remaining_limit = max_items | minus: rendered_count %}
    {% assign current_count = 0 %}
    
    {% if section.settings.shuffle_collections %}
      {% comment %} Shuffle mode: start from a random offset in the collection list {% endcomment %}
      {% assign shuffle_seed = 'now' | date: '%S' | plus: 0 %}
      {% assign cols_size = section_collections.size %}
      {% assign start_offset = shuffle_seed | modulo: cols_size %}
      
      {% comment %} First pass: from offset to end {% endcomment %}
      {% for collection in section_collections %}
        {% if forloop.index0 >= start_offset %}
          {% if current_count < remaining_limit %}
            {% assign skip_this = false %}
            {% if pinned_collection != blank %}
              {% if collection.id == pinned_collection.id %}
                {% assign skip_this = true %}
              {% endif %}
            {% endif %}
            
            {% unless skip_this %}
              <div class="resource-list__item">
                {% render 'illustration-card',
                  collection: collection,
                  random_product: section.settings.random_product,
                  show_collection_title: section.settings.show_collection_title,
                  title_size: section.settings.title_size,
                  show_product_title: section.settings.show_product_title,
                  show_price: section.settings.show_price,
                  show_summary: section.settings.show_summary,
                  image_height: section.settings.image_height,
                  section: section
                %}
              </div>
              {% assign current_count = current_count | plus: 1 %}
              {% if current_count < remaining_limit %}
                <!--@list/split-->
              {% endif %}
            {% endunless %}
          {% endif %}
        {% endif %}
      {% endfor %}
      
      {% comment %} Second pass: from start to offset {% endcomment %}
      {% for collection in section_collections %}
        {% if forloop.index0 < start_offset %}
          {% if current_count < remaining_limit %}
            {% assign skip_this = false %}
            {% if pinned_collection != blank %}
              {% if collection.id == pinned_collection.id %}
                {% assign skip_this = true %}
              {% endif %}
            {% endif %}
            
            {% unless skip_this %}
              <div class="resource-list__item">
                {% render 'illustration-card',
                  collection: collection,
                  random_product: section.settings.random_product,
                  show_collection_title: section.settings.show_collection_title,
                  title_size: section.settings.title_size,
                  show_product_title: section.settings.show_product_title,
                  show_price: section.settings.show_price,
                  show_summary: section.settings.show_summary,
                  image_height: section.settings.image_height,
                  section: section
                %}
              </div>
              {% assign current_count = current_count | plus: 1 %}
              {% if current_count < remaining_limit %}
                <!--@list/split-->
              {% endif %}
            {% endunless %}
          {% endif %}
        {% endif %}
      {% endfor %}
    {% else %}
      {% comment %} Normal mode: render in order {% endcomment %}
      {% for collection in section_collections %}
        {% if current_count < remaining_limit %}
          {% assign skip_this = false %}
          {% if pinned_collection != blank %}
            {% if collection.id == pinned_collection.id %}
              {% assign skip_this = true %}
            {% endif %}
          {% endif %}
          
          {% unless skip_this %}
            <div class="resource-list__item">
              {% render 'illustration-card',
                collection: collection,
                random_product: section.settings.random_product,
                show_collection_title: section.settings.show_collection_title,
                title_size: section.settings.title_size,
                show_product_title: section.settings.show_product_title,
                show_price: section.settings.show_price,
                show_summary: section.settings.show_summary,
                image_height: section.settings.image_height,
                section: section
              %}
            </div>
            {% assign current_count = current_count | plus: 1 %}
            {% if current_count < remaining_limit %}
              <!--@list/split-->
            {% endif %}
          {% endunless %}
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endcapture %}

  {% liquid
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'illustrationList',
    slide_count: max_items,
    content_type: 'illustrations',
    test_id: 'illustrations-list-grid'
  %}
</div>

{% schema %}
{
  "name": "t:names.illustration_list",
  "class": "section-illustration-list",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "text"
    },
    {
      "type": "icon"
    },
    {
      "type": "image"
    },
    {
      "type": "button"
    },
    {
      "type": "video"
    },
    {
      "type": "group"
    },
    {
      "type": "spacer"
    },
    {
      "type": "_divider"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "t:settings.collection_list"
    },
    {
      "type": "header",
      "content": "t:content.cards_layout"
    },
    {
      "type": "select",
      "id": "layout_type",
      "label": "t:settings.layout_type",
      "options": [
        {
          "value": "grid",
          "label": "t:options.grid"
        },
        {
          "value": "carousel",
          "label": "t:options.carousel"
        }
      ],
      "default": "carousel"
    },
    {
      "type": "checkbox",
      "id": "carousel_on_mobile",
      "label": "t:settings.carousel_on_mobile",
      "default": false,
      "visible_if": "{{ section.settings.layout_type != 'carousel' }}"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "t:settings.columns",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "t:settings.mobile_columns",
      "options": [
        {
          "value": "1",
          "label": "t:options.one_number"
        },
        {
          "value": "2",
          "label": "t:options.two_number"
        }
      ],
      "default": "2",
      "visible_if": "{{ section.settings.layout_type == 'grid' and section.settings.carousel_on_mobile == false }}"
    },
    {
      "type": "select",
      "id": "mobile_card_size",
      "label": "t:settings.mobile_columns",
      "options": [
        {
          "value": "60cqw",
          "label": "t:options.one_number"
        },
        {
          "value": "44cqw",
          "label": "t:options.two_number"
        }
      ],
      "default": "60cqw",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "range",
      "id": "columns_gap",
      "label": "t:settings.horizontal_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "rows_gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8,
      "visible_if": "{{ section.settings.layout_type == 'grid'}}"
    },
    {
      "type": "header",
      "content": "t:content.product_display"
    },
    {
      "type": "checkbox",
      "id": "shuffle_collections",
      "label": "t:settings.shuffle_collections",
      "info": "t:info.shuffle_collections",
      "default": false
    },
    {
      "type": "collection",
      "id": "pinned_collection",
      "label": "t:settings.pinned_collection",
      "info": "t:info.pinned_collection"
    },
    {
      "type": "checkbox",
      "id": "pinned_first_product",
      "label": "t:settings.pinned_first_product",
      "info": "t:info.pinned_first_product",
      "default": false,
      "visible_if": "{{ section.settings.pinned_collection != blank }}"
    },
    {
      "type": "checkbox",
      "id": "random_product",
      "label": "t:settings.random_product",
      "info": "t:info.random_product",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_title",
      "label": "t:settings.show_collection_title",
      "default": true
    },
    {
      "type": "select",
      "id": "title_size",
      "label": "t:settings.title_size",
      "options": [
        {
          "value": "sm",
          "label": "t:options.small"
        },
        {
          "value": "md",
          "label": "t:options.medium"
        },
        {
          "value": "lg",
          "label": "t:options.large"
        },
        {
          "value": "xl",
          "label": "t:options.extra_large"
        }
      ],
      "default": "md",
      "visible_if": "{{ section.settings.show_collection_title }}"
    },
    {
      "type": "checkbox",
      "id": "show_product_title",
      "label": "t:settings.show_product_title",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "t:settings.show_price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_summary",
      "label": "t:settings.show_summary",
      "info": "t:info.show_summary",
      "default": true
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "t:settings.image_height",
      "min": 10,
      "max": 60,
      "step": 1,
      "unit": "vh",
      "default": 40
    },
    {
      "type": "header",
      "content": "t:content.carousel_navigation",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "select",
      "id": "icons_style",
      "label": "t:settings.icon",
      "options": [
        {
          "value": "arrow",
          "label": "t:options.arrows"
        },
        {
          "value": "chevron",
          "label": "t:options.chevrons"
        },
        {
          "value": "arrows_large",
          "label": "t:options.arrows_large"
        },
        {
          "value": "chevron_large",
          "label": "t:options.chevron_large"
        },
        {
          "value": "none",
          "label": "t:options.none"
        }
      ],
      "default": "arrow",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "select",
      "id": "icons_shape",
      "label": "t:settings.icon_background",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "circle",
          "label": "t:options.circle"
        },
        {
          "value": "square",
          "label": "t:options.square"
        }
      ],
      "default": "circle",
      "visible_if": "{{ section.settings.icons_style != 'none' and section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "header",
      "content": "t:content.section_layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "t:names.illustrations_carousel",
      "category": "t:categories.fragments"
    }
  ]
}
{% endschema %}
