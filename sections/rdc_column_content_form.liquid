    },
    {
      "type": "text",
      "id": "title_h2",
      "label": "Titre H2 (petit)",
      "default": "Rejoignez"
    },
    {
      "type": "text",
      "id": "title_h1_part1",
      "label": "Titre H1 - Partie 1 (optionnel)"
    },
    {
      "type": "text",
      "id": "title_h1_colored",
      "label": "Titre H1 - Partie colorée",
      "default": "la communauté"
    },
    {
      "type": "richtext",
      "id": "description_text",
      "label": "Texte de description"   
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton (optionnel)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    },
    {
      "type": "header",
      "content": "Formulaire"
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Titre du formulaire",
      "default": "Répondez à l'appel !"
    },
    {
      "type": "textarea",
      "id": "form_subtitle",
