      "default": "Prénom"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Placeholder email",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "submit_text",
      "label": "Texte du bouton d'envoi",
      "default": "Recevoir mes avantages"
    },
    {
      "type": "textarea",
      "id": "disclaimer_text",
      "label": "Texte de disclaimer",
      "default": "Abonnement gratuit, sans obligation, résiliable à tout moment. Vos données restent VOS données."
    },
    {
      "type": "textarea",
      "id": "success_message",
      "label": "Message de succès",
      "default": "Merci ! Vous recevrez bientôt vos avantages par email."
    },
    {
      "type": "image_picker",
      "id": "border_image",
      "label": "Image de bordure décorative (optionnel)",
      "info": "Motif celtique affiché en haut et en bas du formulaire"
    },
    {
      "type": "header",
      "content": "Couleurs"
    },
    {
      "type": "paragraph",
      "content": "Par défaut, la couleur Accent du thème est utilisée. Vous pouvez la remplacer par une couleur personnalisée ci-dessous."
    },
    {
      "type": "color",
      "id": "custom_color",
      "label": "Couleur personnalisée (optionnel)",
      "info": "Laissez vide pour utiliser la couleur Accent du thème"
    }
  ],
  "presets": [
    {
      "name": "Contenu avec Formulaire"
    }
  ]
}
{% endschema %}
