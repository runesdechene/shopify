<div class="rdc-section-form">
  <div class="rdc-section-form__content">
    <div class="rdc-section-form__text">
      {% if section.settings.icon != blank %}
        <img src="{{ section.settings.icon | img_url: '100x' }}" alt="Icon" class="rdc-section-form__icon" loading="lazy">
      {% endif %}
      <h2 style="text-transform: lowercase;">
        {{ section.settings.title_h2 }}
      </h2>
      <h1 style="margin-bottom: 0;">
        {% if section.settings.title_h1_part1 != blank %}
          {{ section.settings.title_h1_part1 }}
        {% endif %}
        <span class="rdc-section-form__title-colored">{{ section.settings.title_h1_colored }}</span>
      </h1>
      <p class="rdc-section-form__description">{{ section.settings.description_text }}</p>
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="rdc-section-form__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
    
    <div class="rdc-section-form__form-container">
      {% comment %} Bordure décorative supérieure {% endcomment %}
      {% if section.settings.border_image != blank %}
        <img src="{{ section.settings.border_image | img_url: '600x' }}" alt="Bordure décorative" class="rdc-section-form__border rdc-section-form__border--top">
      {% endif %}
      
      <div class="rdc-section-form__form-card">
        <h3 class="rdc-section-form__form-title">{{ section.settings.form_title }}</h3>
        <p class="rdc-section-form__form-subtitle">{{ section.settings.form_subtitle }}</p>
        
        {% form 'customer', class: 'rdc-newsletter-form' %}
          {% if form.posted_successfully? %}
            <div class="rdc-section-form__success">
              {{ section.settings.success_message }}
            </div>
          {% else %}
            {% if form.errors %}
              <div class="rdc-section-form__errors">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}
            
            <input type="hidden" name="contact[tags]" value="newsletter-form,prospect">
            <input type="hidden" name="contact[accepts_marketing]" value="true">
            
            <div class="rdc-section-form__field">
              <input 
                type="text" 
                name="contact[first_name]" 
                id="newsletter_first_name"
                placeholder="{{ section.settings.firstname_placeholder }}"
                class="rdc-section-form__input"
                required
              >
            </div>
            
            <div class="rdc-section-form__field">
              <input 
                type="email" 
                name="contact[email]" 
                id="newsletter_email"
                placeholder="{{ section.settings.email_placeholder }}"
                class="rdc-section-form__input"
                required
              >
            </div>
            
            <button type="submit" class="rdc-section-form__submit">
              {{ section.settings.submit_text }}
            </button>
          {% endif %}
        {% endform %}
        
        <p class="rdc-section-form__disclaimer">{{ section.settings.disclaimer_text }}</p>
      </div>
      
      {% comment %} Bordure décorative inférieure {% endcomment %}
      {% if section.settings.border_image != blank %}
        <img src="{{ section.settings.border_image | img_url: '600x' }}" alt="Bordure décorative" class="rdc-section-form__border rdc-section-form__border--bottom">
      {% endif %}
    </div>
  </div>
</div>

<style>
  h2::first-letter {
    text-transform: uppercase;
  }
  
  .rdc-section-form {
    width: 100%;
    padding: 40px 20px;
  }
  
  .rdc-section-form__content {
    display: flex;
    gap: 40px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .rdc-section-form__text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
  }
  
  .rdc-section-form__icon {
    width: 60px;
    height: 60px;
    margin-bottom: 15px;
    object-fit: contain;
  }
  
  .rdc-section-form__text h2 {
    margin: 0 0 10px 0;
  }
  
  .rdc-section-form__text h1 {
    margin: 0 0 20px 0;
  }
  
  .rdc-section-form__description {
    margin: 0;
    line-height: 1.6;
    color: #333;
  }
  
  .rdc-section-form__title-colored {
    color: {% if section.settings.custom_color != blank %}{{ section.settings.custom_color }}{% else %}{{ settings.accent_color | default: '#699E87' }}{% endif %};
  }
  
  .rdc-section-form__button {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 30px;
    background-color: {% if section.settings.custom_color != blank %}{{ section.settings.custom_color }}{% else %}{{ settings.accent_color | default: '#699E87' }}{% endif %};
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.3s ease, opacity 0.3s ease;
  }
  
  .rdc-section-form__button:hover {
    opacity: 0.85;
  }
  
  /* Formulaire */
  .rdc-section-form__form-container {
    flex: 1;
    position: relative;
  }
  
  .rdc-section-form__border {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .rdc-section-form__border--top {
    margin-bottom: -2px;
  }
  
  .rdc-section-form__border--bottom {
    margin-top: -2px;
  }
  
  .rdc-section-form__form-card {
    background: #F5F3EE;
    padding: 40px 30px;
    text-align: center;
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 20px;
  }
  
  .rdc-section-form__form-title {
    font-size: 28px;
    font-weight: 700;
    color: #4A4A4A;
    margin: 0 0 15px 0;
    font-family: var(--font-heading-family);
  }
  
  .rdc-section-form__form-subtitle {
    font-size: 14px;
    line-height: 1.6;
    color: #666;
    margin: 0 0 30px 0;
  }
  
  .rdc-section-form__field {
    margin-bottom: 15px;
  }
  
  .rdc-section-form__input {
    width: 100%;
    padding: 15px 20px;
    border: 1px solid #DDD;
    border-radius: 50px;
    font-size: 14px;
    background: white;
    transition: border-color 0.3s ease;
  }
  
  .rdc-section-form__input:focus {
    outline: none;
    border-color: {% if section.settings.custom_color != blank %}{{ section.settings.custom_color }}{% else %}{{ settings.accent_color | default: '#699E87' }}{% endif %};
  }
  
  .rdc-section-form__input::placeholder {
    color: #999;
  }
  
  .rdc-section-form__submit {
    width: 100%;
    padding: 15px 30px;
    background-color: {% if section.settings.custom_color != blank %}{{ section.settings.custom_color }}{% else %}{{ settings.accent_color | default: '#699E87' }}{% endif %};
    color: white;
    border: none;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: opacity 0.3s ease;
    margin-top: 10px;
  }
  
  .rdc-section-form__submit:hover {
    opacity: 0.85;
  }
  
  .rdc-section-form__disclaimer {
    font-size: 11px;
    line-height: 1.5;
    color: #888;
    margin: 20px 0 0 0;
  }
  
  .rdc-section-form__success {
    background: #D4EDDA;
    color: #155724;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
  
  .rdc-section-form__errors {
    background: #F8D7DA;
    color: #721C24;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .rdc-section-form__content {
      flex-direction: column;
      gap: 30px;
    }
    
    .rdc-section-form__text,
    .rdc-section-form__form-container {
      width: 100%;
    }
    
    .rdc-section-form__form-card {
      padding: 30px 20px;
    }
  }
</style>

