
{%- liquid 
    assign from_value = filter.min_value.value | default: 0.0 | divided_by: 100.0 | ceil
    assign to_value = filter.max_value.value | default: filter.range_max | divided_by: 100.0 | ceil
    assign max = filter.range_max | divided_by: 100.0 | ceil
    assign to_value = to_value | default: max | at_least: 1 
-%} 
<div class="price-slider mb-10 px-8">
  <div class="price-slider-range" 
  data-min="0" 
  data-max="{{ max }}"
  data-min-value="{{ from_value }}"
  data-max-value="{{ to_value }}"
  ></div>
</div>
<div class="flex flex-row gap-x-6 input-price">
  <div class="relative basis-3/6">
  <span class="field-currency">{{ cart.currency.symbol }}</span>
  <div class="field">
    <input
      class="field__input field__input_min"
      name="{{ filter.min_value.param_name }}"
      id="{{ id_prefix }}{{ filter.label | escape }}-GTE"
      {%- if filter.min_value.value -%}
        value="{{ from_value }}"
      {%- endif -%}
      type="text"
      inputmode="numeric"
      placeholder="0"
      data-pattern="\d| |,|\."
      data-min="0"
      data-max="{{ max }}"
    >
    <label class="field__label sr-only" for="{{ id_prefix }}{{ filter.label | escape }}-GTE">
      {{- 'products.facets.from' | t -}}
    </label>
  </div>
</div>
<div class="relative basis-3/6">
    <span class="field-currency">{{ cart.currency.symbol }}</span>

  <div class="field">
    <input
      class="field__input field__input_max"
      name="{{ filter.max_value.param_name }}"
      id="{{ id_prefix }}{{ filter.label | escape }}-LTE"
      {%- if filter.max_value.value -%}
        value="{{ to_value }}"
      {%- endif -%}
      type="text"
      inputmode="numeric"
      placeholder="{{ to_value }}"
      data-pattern="\d| |,|\."
      data-min="0"
      data-max="{{ max }}"
    >
    <label class="field__label sr-only" for="{{ id_prefix }}{{ filter.label | escape }}-LTE">
      {{- 'products.facets.to' | t -}}
    </label>
  </div>
  </div>
</div>
